{
  "manifest_version": 3,
  "name": "Dogecoin Profit Monitor",
  "version": "1.0",
  "description": "Theo dõi giá và tính toán lợi nhuận Dogecoin",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.mining-dutch.nl/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Dogecoin Profit Monitor"
  },
  "content_scripts": [
    {
      "matches": ["https://www.mining-dutch.nl/pools/dogecoin.php*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}